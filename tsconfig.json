{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    "paths": {
      "@forum-entities/*": ["./src/domain/forum/enterprise/entities/*"],
      "@notification-entities/*": ["./src/domain/notification/enterprise/entities/*"],
      "@forum-repositories/*": ["./src/domain/forum/application/repositories/*"],
      "@notification-repositories/*": ["./src/domain/notification/application/repositories/*"],
      "@forum-use-cases/*": ["./src/domain/forum/application/use-cases/*"],
      "@notification-use-cases/*": ["./src/domain/notification/application/use-cases/*"],
      "@forum-value-objects/*": ["./src/domain/forum/enterprise/value-objects/*"],
      "@notification-value-objects/*": ["./src/domain/notification/enterprise/value-objects/*"],
      "@errors/*": ["./src/core/errors/use-case-error/*"],
      "@notification-use-case-errors/*": ["./src/domain/notification/application/use-case-error/*"],
      "@core/*": ["./src/core/*"],
      "@test-repositories/*": ["./test/repositories/*"],
      "@test-factories/*": ["./test/factories/*"],
      "@/*": ["./src/*"],
    },

    "types": ["vitest/globals"]
  }
}
